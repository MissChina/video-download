{
  "name": "m3u8-downloader",
  "version": "6.0.1",
  "description": "M3U8视频下载器 - 跨平台，开箱即用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build": "electron-builder --win --linux --mac"
  },
  "keywords": [
    "m3u8",
    "downloader",
    "video",
    "ffmpeg",
    "cross-platform"
  ],
  "author": "M3U8 Downloader",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "@ffmpeg/ffmpeg": "^0.12.10",
    "@ffmpeg/util": "^0.12.1",
    "@ffmpeg/core-mt": "^0.12.6"
  },
  "build": {
    "appId": "com.m3u8downloader.app",
    "productName": "M3U8下载器",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "renderer.js",
      "downloader.js",
      "logger.js",
      "ffmpeg-worker.js",
      "index.html",
      "styles.css",
      "LICENSE",
      "!**/*.md",
      "!**/*.map",
      "!**/*.ts",
      "!**/node_modules/**/LICENSE",
      "!**/node_modules/**/README*",
      "!**/.git*",
      "!**/test/**",
      "!**/tests/**",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "asar": true,
    "asarUnpack": [
      "node_modules/@ffmpeg/core-mt/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-Windows.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}-Linux.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}-macOS.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "M3U8下载器",
      "language": "2052"
    }
  }
}
