{
  "name": "m3u8-downloader",
  "version": "8.1.0",
  "description": "M3U8视频下载器 - 跨平台，开箱即用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win --x64"
  },
  "keywords": [
    "m3u8",
    "downloader",
    "video",
    "hls"
  ],
  "author": {
    "name": "MissChina",
    "email": "misschina@users.noreply.github.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "mux.js": "^6.0.1"
  },
  "build": {
    "appId": "com.m3u8downloader.app",
    "productName": "M3U8下载器",
    "directories": {
      "output": "release"
    },
    "files": [
      "package.json",
      "main.js",
      "preload.js",
      "renderer.js",
      "downloader.js",
      "logger.js",
      "index.html",
      "styles.css",
      "LICENSE",
      "node_modules/mux.js/**",
      "src/core/**",
      "!**/*.md",
      "!**/*.map",
      "!**/*.ts",
      "!**/node_modules/**/LICENSE",
      "!**/node_modules/**/README*",
      "!**/.git*",
      "!**/test/**",
      "!**/tests/**"
    ],
    "compression": "maximum",
    "asar": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-Windows.${ext}",
      "requestedExecutionLevel": "asInvoker"
    }
  }
}
