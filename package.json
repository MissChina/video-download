{
  "name": "m3u8-downloader",
  "version": "2.6.0",
  "description": "M3U8视频下载器 - 无需环境，开箱即用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir"
  },
  "keywords": ["m3u8", "downloader", "video", "ffmpeg"],
  "author": "M3U8 Downloader",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2"
  },
  "build": {
    "appId": "com.m3u8downloader.app",
    "productName": "M3U8下载器",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "renderer.js",
      "downloader.js",
      "logger.js",
      "ffmpeg-installer.js",
      "index.html",
      "styles.css",
      "LICENSE",
      "!**/*.md",
      "!**/*.map",
      "!**/*.ts",
      "!**/node_modules/**/LICENSE",
      "!**/node_modules/**/README*",
      "!**/.git*",
      "!**/test/**",
      "!**/tests/**",
      "!**/*.test.js",
      "!**/*.spec.js"
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "M3U8下载器",
      "language": "2052"
    },
    "portable": {
      "artifactName": "${productName}-${version}-便携版.${ext}"
    }
  }
}
